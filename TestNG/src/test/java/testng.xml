<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Test case suite e-commerce application">
    <test name = "Test case execution on Chrome browser">
        <groups>
            <run>
                <include name="P2"></include>
            </run>
        </groups>
        <classes>
            <class name="testcaseswithouttestng.HelpTest">
                <methods>
                    <exclude name="verifyAboutUs"></exclude>
                </methods>
            </class>
            <class name="testcaseswithouttestng.LoginTest"></class>
            <class name="testcaseswithouttestng.CartTest">
                <methods>
                    <include name="verifyMovingPrdToWishList"></include>
                </methods>
            </class>
        </classes>
    </test>
    <test name = "Test case execution on Chrome browser - Smoke">
        <classes>
			<groups>
				<run>
					<exclude name="P2"></exclude>
					<exclude name="P3"></exclude>
				</run>
			</groups>
            <class name="testcaseswithtestng.AddressTest"></class>
            <class name="testcaseswithtestng.CartTest"></class>
            <class name="testcaseswithtestng.HelpTest"></class>
            <class name="testcaseswithtestng.LoginTest"></class>
            <class name="testcaseswithtestng.OrderCancellationTest"></class>
            <class name="testcaseswithtestng.OrderHistoryTest"></class>
            <class name="testcaseswithtestng.OrderTrackingTest"></class>
            <class name="testcaseswithtestng.PaymentTest"></class>
            <class name="testcaseswithtestng.ProductReviewTest"></class>
            <class name="testcaseswithtestng.SearchTest"></class>
        </classes>
    </test>
    <!-- Test -->
</suite>
<!-- Suite -->